#include <iostream>
#include <string>
#include <sstream>
#include <fstream>
#include "SLC.h"
using namespace std;
SLC::SLC(int site, BoardDisplay* board){
 NonProperty(false,"SLC",site,board);
}

void SLC::method(Player* p){
 int n = getNumRoll();
 if(n == 0){
 }else{
  int x = rand()%1-100;
  if(x == 1){
   cout << "Congrats! You've received a Tim Cup!" << endl;
   setNumRoll(n-1);
   p->receiveCup();
  }
 }
 int y = rand()%1-24;
 if(y>=1&&y<=3){
  p->move(-3);
 }else if(y>=4&&y<=7){
  p->move(-2);
 }else if(y>=8&&y<=11){
  p->move(-1);
 }else if(y>=12&&y<=14){
  p->move(1);
 }else if(y>=15&&y<=18){
  p->move(2);
 }else if(y>=19&&y<=22){
  p->move(3);
 }else if(y == 23){
  int position = p->pos();
  p->goto(10);
 }else{
  int position = p->pos();
  p->move(30 - position);
 }
}
